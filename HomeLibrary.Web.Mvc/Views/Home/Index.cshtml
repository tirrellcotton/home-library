@model HomeLibrary.Web.Mvc.Models.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <section class="dashboard-actions">
        <a asp-controller="Library" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-journal-bookmark"></i>
            <span>My Library</span>
        </a>
        <a asp-controller="Wishlist" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-heart"></i>
            <span>My Wishlist</span>
        </a>
        <a href="#" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            <span>Add Book</span>
        </a>
    </section>

    <section class="dashboard-stats">
        <div class="stat-card">
            <i class="bi bi-book-fill stat-card__icon"></i>
            <div class="stat-card__label">Total Books Owned</div>
            <div class="stat-card__value">@Model.TotalBooksOwned</div>
        </div>
        <div class="stat-card">
            <i class="bi bi-heart-fill stat-card__icon"></i>
            <div class="stat-card__label">Total Wishlist</div>
            <div class="stat-card__value">@Model.TotalWishlist</div>
        </div>
    </section>
</div>