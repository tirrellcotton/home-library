<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Home Library</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
    <header class="app-header">
        <button class="app-header__menu-btn" id="menuBtn" aria-label="Open menu">
            <span>☰</span>
        </button>
        <div class="app-header__title">
            <span>Home Library</span>
            <span class="app-header__dropdown-icon">▼</span>
        </div>
        <button class="app-header__more-btn" id="moreBtn" aria-label="More options">
            <span>⋮</span>
        </button>
        
        <div class="dropdown-menu" id="dropdownMenu">
            <ul class="dropdown-menu__list">
                <li class="dropdown-menu__item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="dropdown-menu__link">My Library</a>
                </li>
                <li class="dropdown-menu__item">
                    <a href="#" class="dropdown-menu__link">My Wishlist</a>
                </li>
                <li class="dropdown-menu__item">
                    <a href="#" class="dropdown-menu__link">Add Book</a>
                </li>
                <li class="dropdown-menu__item">
                    <a href="#" class="dropdown-menu__link">Settings</a>
                </li>
            </ul>
        </div>
    </header>

    <div class="menu-overlay" id="menuOverlay"></div>
    
    <aside class="side-menu" id="sideMenu">
        <div class="side-menu__header">
            <h2 class="side-menu__title">Menu</h2>
            <button class="side-menu__close-btn" id="closeMenuBtn" aria-label="Close menu">
                <span>✕</span>
            </button>
        </div>
        <nav>
            <ul class="side-menu__list">
                <li class="side-menu__item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="side-menu__link">My Library</a>
                </li>
                <li class="side-menu__item">
                    <a href="#" class="side-menu__link">My Wishlist</a>
                </li>
                <li class="side-menu__item">
                    <a href="#" class="side-menu__link">Add Book</a>
                </li>
                <li class="side-menu__item">
                    <a href="#" class="side-menu__link">Settings</a>
                </li>
            </ul>
        </nav>
    </aside>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="app-footer">
        <div>
            &copy; 2025 - Home Library
        </div>
    </footer>

    <script type="module" src="~/js/dashboard.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>